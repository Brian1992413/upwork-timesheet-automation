{
  "manifest_version": 3,
  "name": "Upwork Timesheet Automation",
  "version": "1.2",
  "description": "Automate timesheet screenshot collection from Upwork",
  "permissions": [
    "tabs",
    "storage",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://www.upwork.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Timesheet Automation"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.upwork.com/nx/reports/client/timesheet/*",
        "https://www.upwork.com/nx/wm/workroom/*"
      ],
      "js": ["content.js"]
    }
  ]
}
